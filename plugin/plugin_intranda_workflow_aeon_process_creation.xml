
<!-- this is all just examplary data: works only with RestTest.java as rest api -->

<config_plugin>

   <aeon>
       <url>https://example.com/api</url>
       <apiKey>1234567890</apiKey>
       <username>username</username>
       <password>password</password>
   </aeon>

  <processCreation>
    <workflowName>Yale</workflowName>
    <opacName>SearchApiTest</opacName>
  </processCreation>

  <!-- the transmission details are configured here;
  the values here are stored for all created processes; -->
  <transaction>
    <!-- aeon = JSON path to needed property ("id" converts to "transmission.id") -->
    <field aeon="transactionNumber">
      <title>Transaction Identifier</title>
      <type readonly="true">input</type>
      <variable place="process">Text field</variable>
      <value></value>
      <help>This is my description for the field so that everyone gets some help.</help>
      <validation strict="true">\d+</validation>
      <message>Your content does not follow our validation guidelines</message>
    </field>

    <field aeon="creationDate">
      <title>Creation Date</title>
      <type readonly="false">input</type>
      <variable place="process">Creation Date</variable>
      <value></value>
      <help>This is my description for the field so that everyone gets some help.</help>

      <message>Your content does not follow our validation guidelines</message>
    </field>

    <field aeon="itemTitle">
      <title>Title</title>
      <type readonly="false">input</type>
      <variable place="process">Title field</variable>
      <value>Transmission</value>
      <help>This is my description for the field so that everyone gets some help.</help>
    </field>

    <field aeon="documentType">
      <title>Document type</title>
      <type readonly="false">input</type>
      <variable place="process">Document type</variable>
      <value></value>
      <help>This is my description for the field so that everyone gets some help.</help>
    </field>

	<field aeon="shippingOption">
      <title>Shipping option</title>
      <type readonly="true">input</type>
      <variable place="process">Shipping option</variable>
      <value></value>
      <help>This is my description for the field so that everyone gets some help.</help>
    </field>

    <field aeon="username">
      <title>User Name</title>
      <type readonly="false">input</type>
      <variable place="process">User Name</variable>
      <value></value>
      <help>This is my description for the field so that everyone gets some help.</help>
    </field>

  </transaction>


  <!-- the properties are configured the same way as the aeon fields above. The only difference is
  here that there is no content from aeon to be mapped so that there needs no 'aeon' to be defined;
  the values here are stored for all created processes; -->
  <properties>

    <field>
      <title>Strict validation</title>
      <type readonly="false">input</type>
      <variable place="process">Strict validation</variable>
      <value></value>
      <help>This is my description for the field so that everyone gets some help.</help>
      <validation strict="true">\d+</validation>
      <message>Value is no number</message>
    </field>

    <field>
      <title>loose validation</title>
      <type readonly="false">input</type>
      <variable place="process">loose validation</variable>
      <value></value>
      <help>This is my description for the field so that everyone gets some help.</help>
      <validation strict="false">\d+</validation>
      <message>Value is no number</message>
    </field>

    <field>
      <title>no validation</title>
      <type readonly="false">input</type>
      <variable place="process">no validation</variable>
      <value>default value</value>
      <help>This is my description for the field so that everyone gets some help.</help>
      <message>Your content does not follow our validation guidelines</message>
    </field>

    <field>
      <title>F Dropdown</title>
      <type readonly="false">select</type>
      <variable place="work">CoWorker</variable>
      <value>Steffen</value>
      <select>Steffen</select>
      <select>Oliver</select>
      <select>Robert</select>
      <help>This is my description for the field so that everyone gets some help.</help>
    </field>
